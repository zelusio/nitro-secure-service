{
  "name": "nitro-secure-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prepare": "husky || true",
    "scan:secrets": "ggshield secret scan path -y -r .",
    "scan:secrets:precommit": "ggshield secret scan pre-commit",
    "build": "tsc",
    "dev": "nodemon",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "mocha 'tests/**/*.spec.ts' --timeout 2000 --exit",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@evervault/sdk": "^6.2.3",
    "@zelusio/auth-lib": "^1.2.1",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "ethers": "6.13.2",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@evervault/attestation-bindings": "^1.0.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.20",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "aws-sdk": "^2.1691.0",
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "eslint": "^8.42.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "nock": "^13.5.5",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "toml": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
